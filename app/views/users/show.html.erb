<div class="container mx-auto my-3 p-3">
<div class="profile mx-auto text-center text-2xl font-semibold my-3 ">Your profile </div>
  <div class="md:flex no-wrap md:-mx-2 ">
      <!-- Left Side -->

      <div class="w-full md:w-3/12 md:mx-2">
          <!-- Profile Card -->
          <div class="bg-white p-3 border-t-4 border-purple-400 gird gird-cols-2">
              <div class="image overflow-hidden"></div>

              <h1 class="text-gray-900 font-bold text-xl leading-8 my-1 text-center"><%= current_user.first_name %></h1>
              <img class="h-16 w-16 rounded-full mx-auto" src="https://i.ibb.co/SByn8Gx/Screen-Shot-2022-12-02-at-12-05-29-PM.png">
              <ul
                  class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">
                  <li class="flex items-center py-3">
                      <span>Status</span>
                      <span class="ml-auto"><span
                              class="bg-purple-500 py-1 px-2 rounded text-white text-sm">Active</span></span>
                  </li>
                  <li class="flex items-center py-3">
                      <span>Member since</span>
                      <span class="ml-auto">Nov 29, 2022</span>
                  </li>
              </ul>
          </div>
          <!-- End of profile card -->
          <div class="my-4"></div>
          <!-- Friends card -->
          <div class="bg-white p-3 hover:shadow">
              <div class="flex items-center space-x-3 font-semibold text-gray-900 text-xl leading-8">
                  <span class="text-purple-500 ml-5px">
                      <svg class="h-5 fill-current" xmlns="http://www.w3.org/2000/svg" fill="none"
                          viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                  </span>
                  <span>Favorite Events</span>
              </div>
              <div class="grid grid-cols-3">
                  <div class="text-center my-2">
                      <img class="h-16 w-16 rounded-full mx-auto"
                          src="https://images.unsplash.com/photo-1470229538611-16ba8c7ffbd7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTF8fG11c2ljJTIwZXZlbnR8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60"
                          alt="">
                      <a href="#" class="text-main-color">Enzo</a>
                  </div>
                  <div class="text-center my-2">
                      <img class="h-16 w-16 rounded-full mx-auto"
                          src="https://plus.unsplash.com/premium_photo-1663047192589-dacd18636fea?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80"
                          alt="">
                      <a href="#" class="text-main-color">Runte</a>
                  </div>
                  <div class="text-center my-2">
                      <img class="h-16 w-16 rounded-full mx-auto"
                          src="https://s1.ticketm.net/dam/a/e20/c6adf92b-cc91-4e88-978e-e119abcdce20_1060261_CUSTOM.jpg"
                          alt="">
                      <a href="#" class="text-main-color">Murder C...</a>
                  </div>
              </div>
          </div>
                <!-- End of friends card -->
            </div>
            <!-- Right Side -->
            <div class="w-full md:w-9/12 mx-2 h-64">
                <!-- Profile tab -->
                <!-- About Section -->
            <div class="bg-white p-3 shadow-sm rounded-sm">
                    <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8">
                        <span clas="text-green-500">
                            <svg class="h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </span>
                        <span class="tracking-wide">About</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="grid md:grid-cols-2 text-sm">
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">First Name:</div>
                                <div class="px-4 py-2 font-semibold"> <%= current_user.first_name %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Last Name:</div>
                                <div class="px-4 py-2"><%= current_user.last_name %></div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Handle:</div>
                                <div class="px-4 py-2">@<%= current_user.handle %></div>
                            </div>
                             <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Birthday:</div>
                                <div class="px-4 py-2">Feb 06, 1998</div>
                            </div>
                            </div>
                            <div class="grid grid-cols-4">
                                <div class="px-4 py-4 font-semibold">Email:</div>
                                <div class="px-4 py-4">
                                    <a class="text-blue-800" href="mailto:"#{current_user.email}><%= current_user.email %></a>
                                </div>
                            </div>
                            <div class="grid grid-cols-4">
                                <div class="px-4 py-2 font-semibold">Contact No:</div>
                                <div class="px-4 py-2">+44 7967961658</div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of about section -->

                <div class="my-4"></div>

                <!-- Experience and education -->

                <!-- End of Experience and education grid -->
                </div>
                <!-- End of profile tab -->
            </div>
        </div>
    </div>
</div>
